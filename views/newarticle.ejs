<% include ./header %>
<div id="new-article-wrap">
	<form id="submit-artical" class="mgb2">
		<label class="block">
			<span class="mgr1">标题</span>
			<input type="text" name="title" required="required" max-length="32" placeholder="输入标题">
		</label>
		<label class="block">
			<span class="mgr1">作者</span>
			<input type="text" name="author" required="required" max-length="16" placeholder="输入作者">
		</label>
		<label class="block">
			<span class="mgr1">标签</span>
			<input type="text" name="tags" required="required" max-length="32" placeholder="输入标签，‘+’分隔">
		</label>
		<label class="block">
			<span class="mgr1">分类</span>
			<select name="category">
				<% categories.forEach(function(c) { %>
					<option value="<%= c.value %>"><%= c.label %></option>
				<% }) %>
			</select>
		</label>
		<label class="block">
			<textarea name='summary' required="required" placeholder="输入摘要"></textarea>
		</label>
		<label class="block">
			<textarea name='body' required="required" placeholder="输入正文，Markdown格式"></textarea>
		</label>
		<label class="block">
			<input type="text" name="phone" required="required" placeholder="输入手机号，获取授权码">
			<input type="text" name="authcode" class="mgl2" required="required" placeholder="输入授权码，区分大小写">
			<button id="authcode" class="button mgl2" type="button">获取</button>
		</label>
		<button class="button mgr2" type="submit">保存</button>
		<a class="button" href="/article">返回</a>
	</form>
</div>
<% include ./footer %>
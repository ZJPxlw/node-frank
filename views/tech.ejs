<% include ./header %>
<link rel="stylesheet" type="text/css" href="/stylesheets/tech.css" />
<div id="tech-page-container">
	<div class="left-nav">
		<header>
			<ul>
				<li><a href="/">Home</a></li>
				<li><a href="/about">About</a></li>
			</ul>
		</header>
		<!-- 动态生成目录 -->
		<ul class="tech-catalog">
			<% for(var dir in directory) { %>
				<li>
					<h3><%= dir %></h3>
					<ul>
					<% directory[dir].forEach(function(d) { %>
						<li>
							<a href="<%= d.href %>"><%= d.title %><%= d.author %><%= d.date %></a>
						</li>
					<% }) %>
					</ul>
				</li>	
			<% } %>
		</ul>
	</div>
	<!-- 拉取具体内容 -->
	<div class="content">
		<h2><%= blog.title %></h2>
		<p>
			<span><%= blog.author %></span>
			<span><%= blog.date %></span>
			<span><%= blog.update %></span>
		</p>
		<%- blog.body %>
	</div>
</div>
<% include ./footer %>